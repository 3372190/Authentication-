{% extends 'template/default.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-primary">
              <div class="panel-heading"> Sign Up</div>
                <div class="panel-body">
                  <form action="{{ path_for('auth.signup') }}" method="post" autocomplete="off">
                      <div class="form-group {{ errors.email ? 'has-error' : '' }}">
                        <label for="email"> Email </label>
                        <input type="text" name="email" id="email" placeholder="you@email.com"  value="{{ errors.email ? '' : old.email  }}" class="form-control">

                        {% if errors.email %}
                          <span class="help-block"> {{ errors.email | first }} </span>
                        {% endif %}

                      </div>

                      <div class="form-group {{ errors.username ? 'has-error' : '' }} ">
                        <label for="username"> username </label>
                        <input type="text" name="username" id="username"   value="{{ errors.username ? '' : old.username }}" class="form-control">

                        {% if errors.username %}
                          <span class="help-block"> {{ errors.username | first }} </span>
                        {% endif %}

                      </div>

                      <div class="form-group {{ errors.password ? 'has-error' : '' }} ">
                        <label for="password"> Password </label>
                        <input type="password" name="password"  class="form-control">

                        {% if errors.password %}
                          <span class="help-block"> {{ errors.password | first }} </span>
                        {% endif %}

                      </div>
                      <button type="submit" class="btn btn-default">Sign up</button>
                      {{csrf.field | raw }}
                  </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
