{% extends 'template/default.twig' %}

{% block content %}
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="panel panel-primary">
              <div class="panel-heading"> Sign Up</div>
                <div class="panel-body">
                  <form action="{{ path_for('auth.signup') }}" method="post" autocomplete="off">
                      <div class="form-group">
                        <label for="email"> Email </label>
                        <input type="email" name="email" id="email" placeholder="you@email.com"   class="form-control">
                      </div>

                      <div class="form-group">
                        <label for="username"> username </label>
                        <input type="text" name="username" id="username"  class="form-control">
                      </div>

                      <div class="form-group">
                        <label for="password"> Password </label>
                        <input type="password" name="password"  class="form-control">
                      </div>

                      <button type="submit" name="signup" class="pull-right btn btn-primary"> Sign Up</button>
                  </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
